<idea-plugin>
    <id>org.trent.trent-helper</id>

    <name>Trent-Helper</name>

    <vendor email="panda_old@qq.com" url="https://www.trent.com">Trent</vendor>

    <description><![CDATA[
           旨在帮助开发者，提高开发效率。</br>
           1. 读取tip文件，实现阅读提示功能</br>
           2. 显示文件点击轨迹，便于开发时来回切换文件修改代码</br>
           3. ***************
  ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- init mybatis-->
<!--        <postStartupActivity implementation="org.trent.helper.mybatis.InitMybatisActivity"/>-->
        <!-- init click light-->
        <postStartupActivity implementation="org.trent.helper.clicklight.ActiveTabHighlighterStartupActivity"/>
        <editorTabColorProvider implementation="org.trent.helper.clicklight.CustomEditorTabColorProvider"/>
        <!-- config page-->
        <applicationService serviceImplementation="org.trent.helper.settings.AppSettingsState"/>
        <applicationService serviceImplementation="org.trent.helper.readtip.ReadTipState"/>
        <applicationConfigurable instance="org.trent.helper.settings.TrentSettings" displayName="Trent Settings"/>
    </extensions>
