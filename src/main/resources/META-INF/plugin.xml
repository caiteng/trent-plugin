<idea-plugin>
    <id>org.trent.trent-helper</id>

    <name>Trent-Helper</name>

    <vendor email="panda_old@qq.com" url="https://www.trent.com">Trent</vendor>

    <description><![CDATA[
           简洁实用的IntelliJ IDEA阅读辅助插件</br>
           • 支持多数据源管理，可配置多个网站</br>
           • 智能内容抓取和分段显示</br>
           • 快捷键操作：Ctrl+Alt+Q/W 切换内容</br>
           • 上下页导航测试功能
  ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- config page-->
        <applicationService serviceImplementation="org.trent.helper.settings.AppSettingsState"/>
        <applicationService serviceImplementation="org.trent.helper.readtip.ReadTipState"/>
        <applicationConfigurable instance="org.trent.helper.settings.TrentSettings" displayName="Trent Settings"/>
    </extensions>
    <actions>
        <action id="org.trent.helper.readtip.TipActionPlus" class="org.trent.helper.readtip.TipActionPlus" text="TipActionPlus">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q"/>
        </action>
        <action id="org.trent.helper.readtip.TipActionSub" class="org.trent.helper.readtip.TipActionSub" text="TipActionSub">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt W"/>
        </action>
    </actions>
</idea-plugin>